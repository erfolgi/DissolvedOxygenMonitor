<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
android:layout_margin="8dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
        <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/date"
                android:textStyle="bold"
                android:textSize="17sp"/>
                <Space android:layout_width="12dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/h_date"
                          tools:text="0101010"
                />
            </TableRow>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/fuzzy2"
                          android:textStyle="bold"
                          android:textSize="17sp"/>
                <Space android:layout_width="12dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/h_fuzzy"
                          tools:text="Off"/>
            </TableRow>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/do1"
                          android:textStyle="bold"
                          android:textSize="19sp"/>
                <Space android:layout_width="12dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="19dp"
                          android:id="@+id/h_do"
                          tools:text="Off"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintBottom_toBottomOf="parent"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:text="Status:"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/h_status"
                  android:textSize="24sp"
                  tools:text="On"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>
